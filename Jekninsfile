pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "my-nginx-website"
        DOCKER_TAG = "latest"
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}", ".")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Map host port 8081 to container port 80
                    docker.image("${DOCKER_IMAGE}:${DOCKER_TAG}").run("--name my-nginx-container -d -p 8081:80")
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                script {
                    // Verify the website is accessible on port 8081
                    sh "curl -I http://localhost:8081"
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
